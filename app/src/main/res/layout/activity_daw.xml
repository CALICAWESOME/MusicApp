<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bar"
            android:background="@color/bg"
            android:minHeight="?attr/actionBarSize">

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:inputType="textFilter"
                android:textColor="@color/white"
                android:theme="@style/AppTheme.Picker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/numberPicker"
                android:text="@string/tempo"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:gravity="center"
                app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/keyPicker"
                android:text="@string/key"
                android:textColor="@color/white" />

            <NumberPicker
                android:id="@+id/keyPicker"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:descendantFocusability="blocksDescendants"
                android:textColor="@color/white"
                android:theme="@style/AppTheme.Picker" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/playheadImage"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="50dp"
            android:adjustViewBounds="false"
            android:background="@color/gray2"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_playhead" />

        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/playheadImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/playheadImage"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="1">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gray2">

                            <ImageView
                                android:id="@+id/imageView32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-3dp"
                                android:adjustViewBounds="false"
                                android:background="@color/bg2"
                                android:paddingLeft="3dp"
                                android:scaleType="fitStart"
                                app:srcCompat="@drawable/ic_looks_one_black_24dp" />

                            <TextView
                                android:id="@+id/chord1Notes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:paddingLeft="8dp"
                                android:text="Chord 1"
                                android:textColor="@color/bg"
                                android:textSize="14sp" />

                        </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/gray2">

                                <TextView
                                    android:id="@+id/chord1Name"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="-5dp"
                                    android:adjustViewBounds="false"
                                    android:background="@color/bg2"
                                    android:gravity="center"
                                    android:text="Cm"
                                    android:textColor="@color/white"
                                    android:textSize="26sp"
                                    android:textStyle="bold|italic" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray1">

                                <ImageView
                                    android:id="@+id/imageView33"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="false"
                                    android:background="@color/bg"
                                    android:paddingLeft="3dp"
                                    android:paddingTop="5dp"
                                    android:scaleType="fitStart"
                                    app:srcCompat="@drawable/ic_looks_two_black_24dp" />

                                <TextView
                                    android:id="@+id/chord2Notes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="5dp"
                                    android:text="Chord 2"
                                    android:textColor="@color/bg"
                                    android:textSize="14sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/gray1">

                                <TextView
                                    android:id="@+id/chord2Name"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="-5dp"
                                    android:adjustViewBounds="false"
                                    android:background="@color/bg"
                                    android:gravity="center"
                                    android:text="Cm"
                                    android:textColor="@color/white"
                                    android:textSize="26sp"
                                    android:textStyle="bold|italic" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray2">

                                <ImageView
                                    android:id="@+id/imageView34"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="false"
                                    android:background="@color/bg2"
                                    android:paddingLeft="3dp"
                                    android:paddingTop="5dp"
                                    android:scaleType="fitStart"
                                    app:srcCompat="@drawable/ic_looks_3_black_24dp" />

                                <TextView
                                    android:id="@+id/chord3Notes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="5dp"
                                    android:text="Chord 3"
                                    android:textColor="@color/bg"
                                    android:textSize="14sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/gray2">

                                <TextView
                                    android:id="@+id/chord3Name"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="-5dp"
                                    android:adjustViewBounds="false"
                                    android:background="@color/bg2"
                                    android:gravity="center"
                                    android:text="Cm"
                                    android:textColor="@color/white"
                                    android:textSize="26sp"
                                    android:textStyle="bold|italic" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray1">

                                <ImageView
                                    android:id="@+id/imageView35"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="false"
                                    android:background="@color/bg"
                                    android:paddingLeft="3dp"
                                    android:paddingTop="5dp"
                                    android:scaleType="fitStart"
                                    app:srcCompat="@drawable/ic_looks_4_black_24dp" />

                                <TextView
                                    android:id="@+id/chord4notes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:paddingLeft="8dp"
                                    android:paddingTop="5dp"
                                    android:text="Chord 4"
                                    android:textColor="@color/bg"
                                    android:textSize="14sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/gray1">

                                <TextView
                                    android:id="@+id/chord4Name"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="-5dp"
                                    android:adjustViewBounds="false"
                                    android:background="@color/bg"
                                    android:gravity="center"
                                    android:text="Cm"
                                    android:textColor="@color/white"
                                    android:textSize="26sp"
                                    android:textStyle="bold|italic" />

                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/gray2">

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@color/bg2"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:scaleType="fitStart"
                                    app:srcCompat="@drawable/ic_edit_black_24dp" />

                                <EditText
                                    android:id="@+id/editText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:ems="10"
                                    android:inputType="textMultiLine" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray2">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:background="@color/bg2"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/ic_piano_icon" />

                                <Button
                                    android:id="@+id/chord1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginTop="-3dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorPrimaryLight"
                                    android:gravity="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />

                                <Button
                                    android:id="@+id/chord2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="-3dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorPrimaryLight"
                                    android:gravity="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />

                                <Button
                                    android:id="@+id/chord3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="-3dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorPrimaryLight"
                                    android:elevation="24dp"
                                    android:gravity="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />

                                <Button
                                    android:id="@+id/chord4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="-3dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorPrimaryLight"
                                    android:gravity="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray1">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:background="@color/bg"
                                    android:padding="5dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/ic_drum_icon" />

                                <ImageView
                                    android:id="@+id/drumdaw"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="7dp"
                                    android:adjustViewBounds="false"
                                    android:background="@color/colorAudioTran"
                                    android:padding="10dp"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/ic_drumdaw" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray2">

                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:background="@color/bg2"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/ic_mic_black_24dp" />

                                <ImageView
                                    android:id="@+id/wave"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="7dp"
                                    android:adjustViewBounds="false"
                                    android:background="@color/colorAccent"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/ic_tempwaveform" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/gray1">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:adjustViewBounds="true"
                                    android:background="@color/bg"
                                    android:padding="5dp"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/ic_bass_icon" />

                                <ImageView
                                    android:id="@+id/bass"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="7dp"
                                    android:adjustViewBounds="false"
                                    android:background="@color/colorBass"
                                    android:padding="10dp"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/ic_drumdaw" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/gray1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@color/bg"
                                    android:padding="3dp"
                                    android:scaleType="fitStart" />

                            </TableRow>
                        </TableLayout>
                    </LinearLayout>


                </FrameLayout>

                <TabWidget
                    android:id="@android:id/tabs"
                    style="@android:style/Widget.TabWidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />

            </LinearLayout>
        </TabHost>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/playheadImage"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/playhead"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_rectangle"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/toolbar"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_settings_black_24dp" />

        <EditText
            android:id="@+id/myEditText"
            style="@style/EditText.SongTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/toolbar"
            android:layout_alignStart="@+id/playheadImage"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="5dp"
            android:hint="Song Title"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:theme="@style/EditText.SongTitle" />

    </RelativeLayout>

</RelativeLayout>
